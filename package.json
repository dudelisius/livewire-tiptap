{
    "dependencies": {
        "@tailwindcss/cli": "^4.1.10",
        "@tailwindcss/vite": "^4.1.10",
        "@tiptap/core": "^2.22.3",
        "@tiptap/extension-code": "^2.22.3",
        "@tiptap/extension-highlight": "^2.22.3",
        "@tiptap/extension-link": "^2.22.3",
        "@tiptap/extension-underline": "^2.22.3",
        "@tiptap/starter-kit": "^2.22.3",
        "alpinejs": "^3.14.9",
        "tailwindcss": "^4.1.10"
